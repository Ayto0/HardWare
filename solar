            local player = game.Players.LocalPlayer
            local character = player.Character
            local celestialObjects = {}

            local function createCelestialObject(name, size, color, distance, rotationSpeed)
                local celestialObject = Instance.new("Part")
                celestialObject.Name = name
                celestialObject.Size = Vector3.new(size, size, size)
                celestialObject.BrickColor = BrickColor.new(color)
                celestialObject.Anchored = true
                celestialObject.CanCollide = false
                celestialObject.Transparency = 0

                local bodyMesh = Instance.new("SpecialMesh")
                bodyMesh.MeshType = Enum.MeshType.Sphere
                bodyMesh.Parent = celestialObject

                local offset = Vector3.new(0, distance, 0)
                celestialObject.Position = character.HumanoidRootPart.Position + offset

                local function updateCelestialObject()
                    local currentTime = tick()
                    local rotationAngle = currentTime * rotationSpeed

                    local newPosition = character.HumanoidRootPart.Position + Vector3.new(math.cos(rotationAngle) * distance, 0, math.sin(rotationAngle) * distance)
                    celestialObject.Position = newPosition
                end

                celestialObject.Parent = workspace
                table.insert(celestialObjects, celestialObject)

                game:GetService("RunService").RenderStepped:Connect(updateCelestialObject)
            end

            local function createRings(size, distance, rotationSpeed, tiltAngle, color) -- yes, ik i could add name :skull:
                local rings = Instance.new("Part")
                rings.Name = "Rings"
                rings.Size = Vector3.new(size, 0.2, size)
                rings.BrickColor = BrickColor.new(color)
                rings.Anchored = true
                rings.CanCollide = false
                rings.Transparency = 0.84135456

                local offset = Vector3.new(0, distance, 0)
                rings.Position = character.HumanoidRootPart.Position + offset

                rings.Orientation = Vector3.new(0, tiltAngle, 0)

                local function updateRings()
                    local currentTime = tick()
                    local rotationAngle = currentTime * rotationSpeed

                    local newPosition = character.HumanoidRootPart.Position + Vector3.new(math.cos(rotationAngle) * distance, 0, math.sin(rotationAngle) * distance)
                    rings.Position = newPosition
                end

                rings.Parent = workspace
                table.insert(celestialObjects, rings)

                game:GetService("RunService").RenderStepped:Connect(updateRings)
            end

            local function onCharacterRemoving()
                for _, object in ipairs(celestialObjects) do
                    object:Destroy()
                end
                celestialObjects = {}
            end

            local function onCharacterAdded(char)
                character = char
                for _, object in ipairs(celestialObjects) do
                    object:Destroy()
                end
                celestialObjects = {}
                createCelestialObject("Mercury", 2, "Grey", 10, 0.8)
                createCelestialObject("Venus", 3, "Bright orange", 20, 0.7)
                createCelestialObject("Earth", 3.5, "Bright blue", 27, 0.6)
                createCelestialObject("Mars", 2.5, "Bright red", 34, 0.5)
                createCelestialObject("Ceres", 0.9, "Grey", 39, 0.45)
                createCelestialObject("Jupiter", 10, "Nougat", 50, 0.4)
                createCelestialObject("Saturn", 8.5, "Gold", 72, 0.3)
                createCelestialObject("Uranus", 7.5, "Turquoise", 90, 0.2)
                createCelestialObject("Neptune", 7.4, "Electric blue", 105, 0.1)
                createCelestialObject("Pluto", 1.2, "Medium stone grey", 115, 0.08)
                createCelestialObject("Eris", 1.2, "Silver flip/flop", 150, 0.06)
                
             
                createRings(15, 72, 0.3, 25, "Gold") -- saturn
				createRings(12, 50, 0.4, 25, "Phosph. White") -- jupiter
				createRings(10, 90, 0.2, 25, "Pastel blue-green") -- uranus
				createRings(9.7, 105, 0.1, 25, "Light Royal blue") -- neptune
            end

            player.CharacterAdded:Connect(onCharacterAdded)
            player.CharacterRemoving:Connect(onCharacterRemoving)

            if player.Character then
                onCharacterAdded(player.Character)
            end
        end
